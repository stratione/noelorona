---
const { id, title, lead, eyebrow } = Astro.props;
const headingId = `${id}-title`;
---
<section id={id} aria-labelledby={headingId} class="scroll-mt-24 py-10">
  {eyebrow && (
    <p class="text-xs uppercase tracking-[0.3em] text-slate">{eyebrow}</p>
  )}
  <h2 id={headingId} class="mt-2 text-2xl font-semibold text-ink">
    {title}
  </h2>
  {lead && <p class="mt-3 text-slate">{lead}</p>}
  <div class="mt-6 space-y-4">
    <slot />
  </div>
</section>
